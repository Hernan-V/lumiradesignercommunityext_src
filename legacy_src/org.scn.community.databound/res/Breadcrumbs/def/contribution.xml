
<component
	id="Breadcrumbs"
	title="Bread Crumbs"
	tooltip="BreadCrumbs - Component for navigation with links."
	icon="res/Breadcrumbs/Breadcrumbs.png"
	handlerType="sapui5"
	propertySheetPath="aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="false"
	modes="m"
>
	
	<requireJs modes="m">res/Breadcrumbs/Breadcrumbs</requireJs>

	<cssInclude>res/Breadcrumbs/Breadcrumbs.css</cssInclude>
	
	
	<property
		id="cleanAllLinks"
		type="boolean"
		title="Clean All Links"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="contentWidth"
		type="int"
		title="Content Width"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="currentLocationText"
		type="String"
		title="Current Location Text"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="links"
		type="String"
		title="Links"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onPressed"
		type="ScriptText"
		title="On Pressed"
		group="Events"
		visible="true">

	</property>
	<property
		id="pressedKey"
		type="String"
		title="Pressed Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="useContentWidth"
		type="boolean"
		title="Use Manual 'Content Width'"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="useLinks"
		type="boolean"
		title="Use Manual 'Links'"
		group="Display"
		bindable="true"
		visible="false">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">300</defaultValue>
		<defaultValue property="HEIGHT">32</defaultValue>
		
		<defaultValue property="cleanAllLinks"><![CDATA[false]]></defaultValue>
		<defaultValue property="contentWidth"><![CDATA[0]]></defaultValue>
		<defaultValue property="currentLocationText"><![CDATA[Home]]></defaultValue>
		<defaultValue property="links"><![CDATA[[{"parentKey":"ROOT","key":"ELEMENT_1","leaf":false,"text":"First Level","contentWidth":"400px","subtle":false,"textAlign":"Begin","textDirection":"LTR","wrapping":false,"enabled":false},{"parentKey":"ROOT","key":"ELEMENT2","leaf":false,"text":"Second Level","href":"","emphasized":false,"enabled":true}]]]></defaultValue>
		<defaultValue property="onPressed"><![CDATA[]]></defaultValue>
		<defaultValue property="pressedKey"><![CDATA[]]></defaultValue>
		<defaultValue property="useContentWidth"><![CDATA[true]]></defaultValue>
		<defaultValue property="useLinks"><![CDATA[true]]></defaultValue>

	</initialization>

</component>
