class org.scn.community.utils.Audio extends org.scn.community.shared.Component {  
	/**
	 * Play the sound
	 */
	void play(){*
		this.play = calcTimestamp();
	*}
	/**
	 * Stop the sound
	 */
	void stop(){*
		this.stop = calcTimestamp();
	*}
	
	@Visibility(private)
	String calcTimestamp() {*
		return new Date().valueOf();
	*}
}
